(
	p
	U
);


sets
(
	data
	{
		type        uniform;
		axis        distance;

        //- cavity. Slightly perturbed so not to align with face or edge.
		start       (0 2.5 0);
		end         (20 2.5 0);
		nPoints     1000;
	}


);



