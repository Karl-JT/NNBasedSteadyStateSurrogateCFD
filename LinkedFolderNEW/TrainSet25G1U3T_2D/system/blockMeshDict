// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

vertices #codeStream
{
    codeInclude
    #{
        #include "pointField.H"
    #};

    code
    #{
        pointField points(16);
        points[0]  = point(0, 0, 0.5);
        points[1]  = point(25.5, 0, 0.5);
        points[2]  = point(25.5, 12.7, 0.5);
        points[3]  = point(0, 12.7, 0.5);
        points[4]  = point(15, 7, 0.5);
        points[5]  = point(16, 7, 0.5);
        points[6]  = point(16, 8, 0.5);
        points[7]  = point(15, 8, 0.5);
        points[8]  = point(15, 0, 0.5);
        points[9]  = point(16, 0, 0.5);
        points[10] = point(25.5, 7, 0.5);
        points[11] = point(25.5, 8, 0.5);
        points[12] = point(16, 12.7, 0.5);
        points[13] = point(15, 12.7, 0.5);
        points[14] = point(0, 8, 0.5);
        points[15] = point(0, 7, 0.5);

        // Duplicate z points
        label sz = points.size();
        points.setSize(2*sz);
        for (label i = 0; i < sz; i++)
        {
            const point& pt = points[i];
            points[i+sz] = point(pt.x(), pt.y(), -pt.z());
        }

        os  << points;
    #};
};


blocks
